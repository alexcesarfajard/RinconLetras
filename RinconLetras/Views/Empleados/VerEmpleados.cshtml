@model List<RinconLetras.Models.Empleado>

@{
    ViewBag.Title = "VerEmpleados";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h2 class="text-center mt-4 mb-4">
    <i class="fas fa-users me-2"></i> Lista de Empleados
</h2>

<div class="d-flex justify-content-end mb-3">
    <a href="@Url.Action("RegistrarEmpleado", "Empleados")" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Registrar nuevo empleado
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-light border-bottom border-3 border-primary">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Fecha Nacimiento</th>
                        <th scope="col">Identificacion</th>
                        <th scope="col">Rol asignado</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdEmpleado</td>
                            <td>@item.NombreEmpleado</td>
                            <td>@item.FechaNacimiento.ToString("yyyy-MM-dd")</td>
                            <td>@item.Identificacion</td>
                            <td>@item.IdRol</td>
                            <td>@item.CorreoElectronico</td>
                            <td>@(item.Activo == 1 ? "Activo" : "Inactivo")</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="@Url.Action("Principal", "Home")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Regresar
        </a>
    </div>
</div>
