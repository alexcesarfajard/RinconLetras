@model List<RinconLetras.Models.Autor>

@{
    ViewBag.Title = "VerAutores";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h2 class="text-center mt-4 mb-4">
    <i class="fas fa-users me-2"></i> Lista de autores
</h2>

<div class="d-flex justify-content-end mb-3">
    <a href="@Url.Action("RegistrarAutor", "Autores")" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Registrar nuevo autor
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text-center">
                <thead class="table-light border-bottom border-3 border-primary">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Nacionalidad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdAutor</td>
                            <td>@item.Nombre_Autor</td>
                            <td>@item.Nacionalidad</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="@Url.Action("Principal", "Home")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Regresar
        </a>
    </div>
</div>

