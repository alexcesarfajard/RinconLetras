@{
    var nombreEmpleado = (Session["NombreUsuario"] == null ? "Invitado" : Session["NombreUsuario"].ToString());
    var Nombre_puesto = (Session["Nombre_puesto"] == null ? "Pendiente" : Session["PerfilUsuario"].ToString());
}

<!DOCTYPE html>
<html lang="es">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <title>Rincón de las Letras</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/StaticFiles/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <style>

        .navbar-dark.bg-dark,
        .sb-sidenav-dark {
            background-color: #1E3A8A !important;
        }

            .sb-sidenav-dark .nav-link,
            .navbar-brand,
            .sb-sidenav-menu-heading {
                color: #f8f9fa !important;
            }

                .sb-sidenav-dark .nav-link:hover {
                    background-color: #3B82F6 !important;
                    color: #fff !important;
                }
    </style>

</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark ">
        <a class="navbar-brand ps-3" href="@Url.Action("Usuario","Home")">Rincón de las Letras</a>

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <form class="d-flex mx-auto me-2" style="width: 30%;" method="get" action="@Url.Action("Buscar", "Home")">
            <input class="form-control me-2" type="search" name="query" placeholder="Buscar libros..." aria-label="Buscar" />
            <button class="btn btn-outline-light" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </form>

        <ul class="navbar-nav ms-auto me-3 me-lg-4 d-flex align-items-center">


            <li class="nav-item">
                <a class="nav-link text-white" href="@Url.Action("Perfil","Home")">
                    <i class="fas fa-user fa-fw"></i>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="@Url.Action("Carrito", "Home")">
                    <i class="fas fa-shopping-cart"></i>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white ms-1" href="@Url.Action("CerrarSesion", "Home")">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Opciones</div>

                        <a class="nav-link" href="@Url.Action("Usuario","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Principal
                        </a>

                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseCatalogo">
                            <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                            Libros
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseCatalogo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("VerCatalogo", "Catalogo")">Acción</a>
                                <a class="nav-link" href="@Url.Action("RegistrarLibro", "Catalogo")">Romance</a>
                                <a class="nav-link" href="@Url.Action("RegistrarLibro", "Catalogo")">Ciencia</a>
                                <a class="nav-link" href="@Url.Action("RegistrarLibro", "Catalogo")">Terror</a>
                                <a class="nav-link" href="@Url.Action("RegistrarLibro", "Catalogo")">Ficción</a>
                            </nav>
                        </div>

                        <a class="nav-link" href="@Url.Action("VerClientes", "Clientes")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-friends"></i></div>
                            Encuéntranos
                        </a>
  
                    </div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Derechos reservados Rincón de las letras</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/StaticFiles/js/scripts.js"></script>
    <script src="~/StaticFiles/js/datatables-simple-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>

    <script>
        window.addEventListener("pageshow", function (event) {
            if (event.persisted || performance.getEntriesByType("navigation")[0].type === "back_forward") {
                window.location.reload(true);
            }
        });
    </script>
</body>
</html>

