@model RinconLetras.Models.Empleado

@{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewBag.Title = "Iniciar sesión";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>


            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Inicio de sesión</h3></div>
                            <div class="card-body">

                                @if (ViewBag.Mensaje != null)
                                {
                                    <div class="alert alert-primary text-center">
                                        @ViewBag.Mensaje
                                    </div>
                                }


                                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "FormIniciarSesion" }))
                                {
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", @type = "email", @placeholder = "correo@example.com", @id = "inputEmail" })
                                        <label for="inputEmail">Correo electrónico</label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        @Html.PasswordFor(m => m.Contrasenna, new { @class = "form-control", @placeholder = "Contraseña", @id = "inputPassword" })
                                        <label for="inputPassword">Contraseña</label>
                                    </div>

                                    <div class="form-check mb-3">
                                        <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                        <label class="form-check-label" for="inputRememberPassword">Recordar contraseña</label>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">

                                        <div class="d-flex flex-column">
                                            <a class="small mb-1" href="@Url.Action("RecuperarAcceso","Home")">
                                                ¿Olvidaste tu contraseña?
                                            </a>
                                            <a class="small" href="@Url.Action("RegistrarseCliente","Clientes")">
                                                Crear una cuenta nueva
                                            </a>
                                        </div>

                                        <button type="submit" class="btn btn-primary px-4">
                                            Proceder
                                        </button>
                                    </div>
                                }

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>