@model List<RinconLetras.Models.Libro>

@{
    ViewBag.Title = "Catálogo de Libros";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}


<div class="container mt-5">
    <h2 class="titulo-catalogo mb-4 text-center">
        <i class="fas fa-book me-2"></i> Catálogo de Libros
    </h2>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger text-center shadow-sm">@ViewBag.Mensaje</div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 card-libro">
                        <!-- Imagen -->
                        @if (!string.IsNullOrEmpty(item.Imagen))
                        {
                            <img src="@Url.Content(item.Imagen)"
                                 alt="Imagen de @item.Nombre"
                                 class="card-img-top"
                                 style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light" style="height: 250px;">
                                <span class="text-muted">Sin imagen</span>
                            </div>
                        }

                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.Nombre</h5>
                        <p class="mb-2">
                            <i class="fas fa-tags"></i> @item.Genero
                        </p>
                        <p class="mb-1">
                            <i class="fas fa-building"></i> @item.Editorial
                        </p>

                        <p class="text-muted mb-1">
                            <i class="fas fa-layer-group"></i> Cantidad: @item.CantidadInventario
                        </p>
                        <p class="card-text mb-1">
                            <span class="fw-semibold" style="color: #28a745;">₡@String.Format("{0:N2}", item.Precio)</span>
                        </p>
                        <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post" class="d-flex justify-content-center align-items-center flex-column">
                            <input type="hidden" name="IdLibro" value="@item.IdLibro" />

                            <div class="d-flex justify-content-center align-items-center mb-2" style="gap: 10px;">
                                <input type="number" name="Cantidad"
                                       class="form-control text-center"
                                       min="1" max="@item.CantidadInventario"
                                       value="1" required
                                       style="width: 90px; height: 35px;" />

                                <button type="submit" class="btn btn-sm"
                                        style="background-color: #1E3A8A; color: white; width: 90px; height: 35px;">
                                    <i class="fas fa-shopping-cart"></i> Agregar
                                </button>
                            </div>
                        </form>

                    </div>

                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5 text-muted">
            <i class="fas fa-info-circle fs-3"></i>
            <p>No hay libros disponibles en este momento.</p>
        </div>
    }
</div>


