@model RinconLetras.Models.Editorial

@{
    ViewBag.Title = "RegistrarEditorial";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-primary text-center">
        @ViewBag.Mensaje
    </div>
}

@using (Html.BeginForm("RegistrarEditorial", "Editoriales", FormMethod.Post, new { @id = "FormRegistrarEditorial" }))
{
    <div class="card shadow p-4" style="max-width: 600px; margin: 0 auto;">
        <h4 class="mb-4 text-center">Registrar editorial</h4>

        <div class="mb-3">
            <label for="Nombre" class="form-label">Nombre de la editorial</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Ej: Editorial Santillana" })
        </div>

        <div class="mb-3">
            <label for="Direccion" class="form-label">Direccion</label>
            @Html.TextAreaFor(m => m.Direccion, new { @class = "form-control", @placeholder = "Ej: Direccion de la editorial", rows = "4" })
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary d-grid w-100">Proceder</button>
        </div>
        <a href="@Url.Action("Principal", "Home")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Regresar
        </a>
    </div>
}

